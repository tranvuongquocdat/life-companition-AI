{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",
    "target": "ES2018",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowJs": true,
    "importHelpers": true,
    "lib": ["DOM", "ES2018", "ES2021.String"]
  },
  "include": ["src/**/*.ts"]
}
